{{>header }}
<form id="macronutrient_form" action="/nutrition/macronutrient/edit/{{ID}}/"
      data-dojo-type="dijit.form.Form" 
      method="post" >
  <input type="hidden" name="id" value="{{ID}}" />
  <label>Name:</label><br>
  <input type="text" name="name" value="{{NAME}}" size="50" class="" {{DOJOTEXTBOX}}/><br />
  <label>Description:</label><br>
  <textarea name="description" rows="5" cols="50" {{DOJOSIMPLETEXTAREA}}>
    {{DESCRIPTION}}
  </textarea> <br>
  <label>Daily Recommended Value (grams):</label><br>
  <input type="text" name="dosage" value="{{DRV}}" size="50" {{DOJOTEXTBOX}}/><br />
  <button {{DOJOBUTTON}} type="submit" name="submitButton" value="Submit">Submit</button>
  <a href="/nutrition/macronutrient/">back</a>
</form>
{{ >footer }}
