<form action="/editpost/{{ID}}/" method="post">
  <input type="hidden" name="id" value="{{ID}}"/>
  <label>Title:</label>
  <br>
  <input type="text" name="title" value="{{TITLE}}"
          style="width:100%"      {{DOJOTEXTBOX}} />
  <br />
  <textarea name="body" rows="20"  {{DOJOSIMPLETEXTAREA}}>
    {{BODY}}
  </textarea> 
  <input type="submit" value="Submit" {{DOJOBUTTON}} label="Submit" />
<a href="/">back</a>
</form>

